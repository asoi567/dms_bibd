<p id="notice"><%= notice %></p>

<h1><%=t '.title' %></h1>

<table class="table">
  <thead>
    <tr>
      <th><%= Dmsf::StandardOperation.human_attribute_name :name %></th>
      <th><%= Dmsf::StandardOperation.human_attribute_name :debits_account %></th>
      <th><%= Dmsf::StandardOperation.human_attribute_name :credits_account %></th>
      <th><%= Dmsf::StandardOperation.human_attribute_name :document_definition %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @dmsf_standard_operations.each do |dmsf_standard_operation| %>
      <tr>
        <td><%= dmsf_standard_operation.name %></td>
        <td><%= dmsf_standard_operation.debits_account.code %> "<%= dmsf_standard_operation.debits_account.name %>"</td>
        <td><%= dmsf_standard_operation.credits_account.code %> "<%= dmsf_standard_operation.credits_account.name %>"</td>
        <td>#<%= dmsf_standard_operation.document_definition.id %> <%= dmsf_standard_operation.document_definition.name %></td>
        <td>
          <%= link_to t('shared.edit'), edit_dmsf_standard_operation_path(dmsf_standard_operation),
              class: 'btn btn-primary' %>
          <%= link_to t('shared.destroy'), dmsf_standard_operation, method: :delete, class: 'btn btn-danger',
              data: { confirm: t('shared.confirmation') } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to t('.new'), new_dmsf_standard_operation_path, class: 'btn btn-primary' %></p>
