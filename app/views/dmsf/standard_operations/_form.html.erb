<%= simple_form_for(@dmsf_standard_operation) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :debits_account, label_method: :full_name %>
    <%= f.association :credits_account, label_method: :full_name %>
    <%= f.association :document_definition %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
